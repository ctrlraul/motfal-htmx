{
	"tasks": {
		"dev": "deno --env-file --watch -A src/main.ts"
	},
	"imports": {
		"jsx": "./src/jsx.ts",
		"@html/": "./src/html/",
		"@oak/oak": "jsr:@oak/oak@^17.1.3",
		"@raul/env": "jsr:@raul/env@^0.1.0",
		"kysely": "npm:kysely@^0.27.5",
		"pg": "npm:pg@^8.13.1",
		"tweetnacl": "npm:tweetnacl@^1.0.3",
		"unique-names-generator": "npm:unique-names-generator@^4.7.1"
	},
	"fmt": {
		"singleQuote": true
	},
	"lint": {
		"exclude": ["static"]
	},
	"compilerOptions": {
        "jsx": "react",
        "jsxFactory": "jsx",
        "jsxFragmentFactory": "Fragment"
	}
